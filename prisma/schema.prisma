generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id String @unique
  time TimeUser?
  xp Int
  @@map("user")
}

model TimeUser {
  id        String   @unique
  user User @relation(fields: [id], references: [id])
  time      Int
  createdAt DateTime @default(now())

  @@map("timeuser")
}
